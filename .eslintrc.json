{
  "env": {
    "browser": true,
    "es2021": true
  },
  "extends": [
    "plugin:react/recommended",
    "xo",
    "xo-react",
    "xo-typescript",
    "prettier"
  ],
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "plugins": ["react"],
  "rules": {
    "@typescript-eslint/triple-slash-reference": "off",
    "@typescript-eslint/no-unsafe-call": "off",
    "react/react-in-jsx-scope": "off"
  }
}
